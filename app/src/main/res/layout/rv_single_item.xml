<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/ivMalaSlika1"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/tv_recycler_ime"
            android:layout_alignBottom="@+id/tv_recycler_adresa"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/rv_image_kontakta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_recycler_ime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivMalaSlika1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Ime" />

        <TextView
            android:id="@+id/tv_recycler_prezime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recycler_ime"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/ivMalaSlika1"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Prezime" />

        <TextView
            android:id="@+id/tv_recycler_adresa"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_recycler_prezime"
            android:layout_marginLeft="18dp"
            android:textStyle= "italic"
            android:layout_toRightOf="@+id/ivMalaSlika1"
            tools:text="Adresa"
            android:textColor="@color/colorPrimaryDark"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView><!--<?xml version="1.0" encoding="utf-8"?>-->
